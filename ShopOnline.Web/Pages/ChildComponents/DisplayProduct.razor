
@foreach (var item in Products)
{
    <div class="col-md-3 mb-2">

        <a href="#">
            <div class="card">
                <img class="img-thumbnail" src=@item.ImageURL style="height:250px"/>
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        @item.Name
                    </h5>
                    <p class="card-text">
                        <b>@item.Price.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("hi-IN"))</b>
                    </p>
                </div>
            </div>
        </a>

    </div>
}

@code {

    [Parameter]
    public IEnumerable<ProductDto> Products { get; set; }

}
